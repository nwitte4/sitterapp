<div class="sign-in-page">
  <h2>Parent Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'text-area' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'text-area' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <br>
  <h3>New to SitterSetter? Try these:</h3>
  <%= render "parents/shared/links" %>
  <br>
  <h3>Not a parent? Try this:</h3>
  <%= link_to 'Sitter Sign In', new_sitter_session_path %>
</div>
