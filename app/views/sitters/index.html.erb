<div class="sitter-index">

  <div class="sitter-info">
    <h4>Sitter Info</h4>
    <% email = @sitter.email.split('@')[0] %>
    <h5> Email: <%= @sitter.email %> </h5>
  </div>

  <div class="remove-sitter-option">
    <%= link_to "Remove #{email.capitalize}", "/sitters/#{@sitter.id}", method: :post %>
  </div>

  <div class="requested-sitters">
    <% if @requests.empty?%>
    <p> No current requests for <%=@sitter.email.split('@')[0]%> </p>
    <% else %>
      <h4> Requested for: </h4>
        <% @requests.each do |request| %>
          <br>
          <%= request.start_time.localtime.strftime("%B %d %I:%M %p") %> - <%= request.end_time.localtime.strftime("%I:%M %p") %>
          - $<%= request.cost %>
          <br>
        <% end %>
    <% end %>
  </div>

  <div class="request-form">
    <h4> Start New Request </h4>
    <%= form_with(model: Request.new, local: true) do |f| %>
    <br>
    <%= f.label "From", class: 'form-label' %>
    <%= f.datetime_select :start_time, :default => Time.now, ampm: true %>
    <br>
    <%= f.label "Until", class: 'form-label' %>
    <%= f.datetime_select :end_time, :default => Time.now, ampm: true %>
    <br>
    <%= f.label "Cost", class: 'form-label' %>
    <span>$<%= f.number_field :cost %></span>
    <%= f.hidden_field :sitter_email, :value => @sitter.email %>
    <br>
    <%= f.submit "Request #{email.capitalize}", :class=> "submit-button"  %>
    <% end %>
    <br>
  </div>

</div>
